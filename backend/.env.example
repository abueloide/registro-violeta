# MongoDB Configuration
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/registro_violeta

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=43200

# Google Drive Configuration
# Crear Service Account en Google Console y pegar el JSON completo aquí
GOOGLE_DRIVE_CREDENTIALS={"type":"service_account","project_id":"your-project","private_key_id":"..."}

# Telegram Bot Configuration (opcional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_AUTHORIZED_USERS=["123456789","987654321"]

# Webhook Configuration (para producción)
WEBHOOK_URL=https://your-domain.com/webhook

# Environment
ENVIRONMENT=development
PORT=8001

# Cors Origins (para producción)
CORS_ORIGINS=["https://your-frontend-domain.com","http://localhost:3000"]
